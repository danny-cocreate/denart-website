---
import PageLayout from '../layouts/PageLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<PageLayout title="Contact Us | DenArt" description="Get in touch with DenArt for your event needs">
	<div class="max-w-4xl mx-auto py-12 px-6">
		<h1 class="text-4xl font-bold text-gray-800 mb-6 text-center">Contact Us</h1>
		<p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">
			Have questions or want to book our services? Fill out the form below and we'll get back to you shortly.
		</p>
		<ContactForm />
	</div>
</PageLayout>
