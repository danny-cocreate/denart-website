---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import SectionHeader from '../components/SectionHeader.astro';
---

<BaseLayout title="Contact DenArt" description="Get in touch with DenArt body painting studio in Brooklyn">
	<main class="max-w-4xl mx-auto section-loose px-6">
		<SectionHeader
			title="Get in"
			titleAccent="Touch"
			subtitle="Have questions or want to book our services? We'd love to hear from you."
			centered={true}
			class="mb-12"
		/>

		<div class="grid md:grid-cols-2 gap-12 mb-16">
			<div>
				<h3 class="font-display text-2xl text-sand mb-6">Visit Us</h3>
				<address class="not-italic space-y-3 text-gray-300">
					<p>CoCreate Space</p>
					<p>99 Kingsland Ave #102</p>
					<p>Brooklyn, NY 11222</p>
				</address>

				<h3 class="font-display text-2xl text-sand mt-10 mb-6">Contact</h3>
				<div class="space-y-3 text-gray-300">
					<p>
						<a href="tel:646-926-1202" class="text-brand-red hover:text-white transition-colors">
							646-926-1202
						</a>
					</p>
					<p>
						<a href="mailto:info@denartny.com" class="text-brand-red hover:text-white transition-colors">
							info@denartny.com
						</a>
					</p>
				</div>

				<h3 class="font-display text-2xl text-sand mt-10 mb-6">Hours</h3>
				<p class="text-gray-300">By appointment only</p>
			</div>

			<div>
				<ContactForm />
			</div>
		</div>
	</main>
</BaseLayout>
