---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const services = await getCollection('services');

// Group by category (private vs events)
const groupedServices = {
  private: [],
  events: []
};

services.forEach((service) => {
  const cat = service.data.category || 'private';
  if (groupedServices[cat]) {
    groupedServices[cat].push(service);
  } else {
    groupedServices.private.push(service);
  }
});

// Sort by order
Object.keys(groupedServices).forEach((key) => {
  groupedServices[key].sort((a, b) => (a.data.order || 99) - (b.data.order || 99));
});

const categoryLabels = {
  private: 'Private Sessions',
  events: 'Events & Parties'
};
---

<BaseLayout title="Body Painting Services" description="Professional body painting services in Brooklyn, NYC - private sessions, events, maternity painting, and more.">
  <!-- Dark Hero Header -->
  <section class="relative bg-gray-900 py-16 md:py-24 px-6 overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_rgba(107,33,168,0.3)_0%,_transparent_60%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom,_rgba(212,175,55,0.1)_0%,_transparent_50%)]"></div>
    <div class="max-w-4xl mx-auto relative z-10 text-center">
      <span class="inline-block px-4 py-2 bg-brand-purple/20 text-brand-gold rounded-full text-sm font-medium mb-6 border border-brand-purple/30">
        Our Services
      </span>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 font-playfair">Body Painting Services</h1>
      <p class="text-xl text-[#b8b8c4] max-w-2xl mx-auto font-light">
        Transform yourself or your event with professional body painting services in Brooklyn, NYC.
      </p>
    </div>
  </section>

  <main class="max-w-7xl mx-auto py-12 md:py-16 px-6 bg-dark" style="background-color: var(--color-bg-dark);">
    {Object.entries(groupedServices).map(([key, categoryServices]) => (
      categoryServices.length > 0 && (
        <section class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <h2 class="text-2xl md:text-3xl font-bold text-white">{categoryLabels[key]}</h2>
            <div class="flex-grow h-px bg-gray-700"></div>
            <span class="text-gray-400 text-sm">{categoryServices.length} {categoryServices.length === 1 ? 'service' : 'services'}</span>
          </div>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {categoryServices.map((service) => (
              <a href={`/services/${service.slug}`} class="group block bg-gray-800 rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-1 border border-gray-700">
                <div class="aspect-video overflow-hidden">
                  {service.data.heroImage ? (
                    <img 
                      src={service.data.heroImage} 
                      alt={service.data.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                    />
                  ) : (
                    <div class="w-full h-full bg-gradient-to-br from-brand-purple/30 to-brand-gold/30 flex items-center justify-center">
                      <span class="text-4xl">ðŸŽ¨</span>
                    </div>
                  )}
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold text-white mb-2 group-hover:text-brand-gold transition-colors font-playfair">
                    {service.data.title}
                  </h3>
                  {service.data.tagline && (
                    <p class="text-brand-gold text-sm mb-3 font-medium">{service.data.tagline}</p>
                  )}
                  <p class="text-[#a8a8b8] text-sm line-clamp-3 leading-relaxed">{service.data.description}</p>
                  <div class="mt-4 flex items-center text-[#7b7b8a] group-hover:text-brand-gold transition-colors">
                    <span class="text-sm font-medium">Learn more</span>
                    <span class="ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      )
    ))}

    <!-- CTA Section -->
    <section class="mt-16 md:mt-20 text-center">
      <div class="bg-gradient-to-br from-brand-purple/20 to-brand-gold/20 rounded-2xl p-10 md:p-12 border border-brand-purple/30">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4 font-playfair">Ready to Transform?</h2>
        <p class="text-[#b8b8c4] max-w-2xl mx-auto mb-8 text-lg">
          Not sure which service is right for you? Get in touch and we'll help you choose the perfect body painting experience.
        </p>
        <a 
          href="/get-a-quote" 
          class="inline-block bg-brand-purple hover:bg-purple-700 text-white font-semibold py-4 px-10 rounded-lg transition-all duration-300 shadow-lg hover:shadow-purple-500/25 text-lg"
        >
          Get a Quote
        </a>
      </div>
    </section>
  </main>
</BaseLayout>
