---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
---

<BaseLayout title="DenArt - Face Painting & Event Services">
	<Header />
	<main>
		<HeroSection 
			title="Welcome to DenArt" 
			subtitle="Professional face painting and event services for all occasions"
		/>
		<section class="max-w-7xl mx-auto py-16 px-6">
			<h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Our Services</h2>
			<p class="text-gray-600 text-center max-w-2xl mx-auto">
				We bring creativity and fun to your events with professional face painting services.
			</p>
		</section>
	</main>
	<Footer />
</BaseLayout>
