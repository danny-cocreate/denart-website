---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const classes = await getCollection('classes');
const testimonials = await getCollection('testimonials');

const upcomingClasses = classes.flatMap((classItem) => 
	classItem.data.schedule ? classItem.data.schedule.map((date) => ({ classItem, date })) : []
).slice(0, 4);

const featuredTestimonial = testimonials[0];
---

<BaseLayout title="DenArt Body Painting Studio — NYC Body Art & Classes" description="Body painting for everyone — classes, private photo sessions, maternity, events and more in Brooklyn, NYC. 2000+ bodies painted since 2011.">
	<main class="bg-void">
		<!-- Hero Section - Dramatic Full-bleed -->
		<section class="relative min-h-[92vh] flex items-center justify-center overflow-hidden">
			<!-- Background Image with Gradient Overlay -->
			<div class="absolute inset-0">
				<img 
					src="/images/hero-mosaic.jpg" 
					alt="DenArt body painting artwork"
					class="w-full h-full object-cover scale-105"
					style="animation: heroScale 20s ease-in-out infinite alternate;"
				/>
				<div class="absolute inset-0 bg-gradient-to-b from-void/70 via-void/50 to-void"></div>
				<div class="absolute inset-0 bg-gradient-to-r from-void/80 via-transparent to-void/80"></div>
			</div>

			<!-- Hero Content -->
			<div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
				<!-- Semi-transparent background for legibility -->
				<div class="absolute inset-0 -mx-6 -my-4 bg-black/80 backdrop-blur-sm rounded-2xl"></div>
				<div class="relative py-12">
				<!-- Subtitle -->
				<p class="text-brand-red text-xs uppercase tracking-[0.3em] mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 200ms; animation-fill-mode: forwards;">
					Brooklyn Body Art Studio • Est. 2011
				</p>

				<!-- Main Headline -->
				<h1 class="font-display text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-semibold text-sand mb-8 leading-[0.95] opacity-0 animate-fade-in-up" style="animation-delay: 400ms; animation-fill-mode: forwards;">
					Body painting<br/>
					<span class="italic font-normal">for everyone</span>
				</h1>

				<!-- Decorative Line -->
				<div class="w-24 h-px bg-gradient-to-r from-transparent via-brand-red to-transparent mx-auto mb-8 opacity-0 animate-fade-in-up" style="animation-delay: 600ms; animation-fill-mode: forwards;"></div>

				<!-- Subtitle -->
				<p class="text-lg md:text-xl text-sand/80 max-w-2xl mx-auto mb-12 leading-relaxed opacity-0 animate-fade-in-up" style="animation-delay: 700ms; animation-fill-mode: forwards;">
					Classes, private photo sessions, maternity art, events, and more. 
					Over 2000 bodies transformed into living canvas.
				</p>

				<!-- CTAs -->
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center opacity-0 animate-fade-in-up" style="animation-delay: 900ms; animation-fill-mode: forwards;">
					<a 
						href="/services/fine-art-body-painting" 
						class="group relative inline-flex items-center gap-2 font-semibold uppercase tracking-wider bg-brand-red px-8 py-4 rounded-lg overflow-hidden transition-all duration-300 hover:shadow-lg hover:shadow-brand-red/30 hover:-translate-y-0.5"
					>
						<span class="relative z-10 text-white">Book Private Session</span>
						<svg class="w-4 h-4 relative z-10 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
						</svg>
					</a>
					<a 
						href="/classes/uv-body-paint-couples" 
						class="group inline-flex items-center gap-2 font-semibold uppercase tracking-wider text-sand border border-sand/30 px-8 py-4 rounded-lg backdrop-blur-sm bg-white/5 hover:bg-white/10 hover:border-brand-red/50 transition-all duration-300"
					>
						<span>Attend a Class</span>
						<svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
						</svg>
					</a>
				</div>
				</div>
			</div>

			<!-- Scroll Indicator -->
			<div class="absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0 animate-fade-in" style="animation-delay: 1.5s; animation-fill-mode: forwards;">
				<div class="flex flex-col items-center gap-2 text-sand/40">
					<span class="text-xs uppercase tracking-widest">Scroll</span>
					<svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
					</svg>
				</div>
			</div>
		</section>

		<!-- As Seen On - Dark Theme -->
		<section class="py-16 px-6 bg-void border-b border-zinc-800">
			<div class="max-w-full mx-auto text-center px-4">
				<p class="text-center text-xs uppercase tracking-[0.3em] text-sand-muted mb-8">As Seen On</p>
				<div class="flex flex-nowrap justify-center items-center gap-x-16 opacity-90 overflow-hidden">
					<img src="/images/logos/logo-today.png" alt="TODAY Show" class="h-20 w-auto" />
					<img src="/images/logos/logo-1stlook.png" alt="1st Look" class="h-20 w-auto" />
					<img src="/images/logos/logo-nbc.png" alt="NBC" class="h-20 w-auto" />
					<img src="/images/logos/logo-prosieben.png" alt="ProSieben" class="h-20 w-auto" />
					<img src="/images/logos/logo-taff.png" alt="TAFF" class="h-20 w-auto" />
					<img src="/images/logos/logo-rcti.png" alt="RCTI" class="h-20 w-auto" />
					<img src="/images/logos/logo-carson.png" alt="Carson Daly" class="h-20 w-auto" />
					<img src="/images/logos/logo-makeup.png" alt="Make Up Artist" class="h-20 w-auto" />
				</div>
			</div>
		</section>

		<!-- Upcoming Events Section - Dark Theme -->
		<section class="py-24 md:py-32 px-6 bg-void border-b border-zinc-800">
			<div class="max-w-7xl mx-auto">
				<div class="grid lg:grid-cols-12 gap-12 lg:gap-16">
					<!-- Main Content -->
					<div class="lg:col-span-8">
						<!-- Section Header -->
						<div class="mb-12">
							<p class="text-brand-red text-xs uppercase tracking-[0.25em] mb-4">What's Coming</p>
							<h2 class="font-display text-4xl md:text-5xl text-sand">
								Upcoming Classes<br/>& Events
							</h2>
						</div>

						<!-- Events Grid -->
						<div class="space-y-4">
							{upcomingClasses.map(({ classItem, date }, index) => {
								// Parse date from format like "Fri, Feb 6 | 6p | 8:30p" or "Fri, 16 Jan 2026 | 6-8pm"
								const shortDateMatch = date.match(/(\w+),?\s+(\w+)\s+(\d+)(?:\s+\||\s*$)/);
								const fullDateMatch = date.match(/(\w+),?\s+(\d+)\s+(\w+)\s+(\d+)/);
								
								let dateObj;
								let month = '???';
								let day = '??';
								
								if (shortDateMatch) {
									month = shortDateMatch[2].substring(0, 3).toUpperCase();
									day = shortDateMatch[3];
								} else if (fullDateMatch) {
									month = fullDateMatch[3].substring(0, 3).toUpperCase();
									day = fullDateMatch[2];
								} else {
									// Try to extract any numbers
									const nums = date.match(/\d+/);
									day = nums ? nums[0] : '??';
								}
								
								return (
									<a href={`/classes/${classItem.slug}`} class="group block">
										<div class="flex gap-6 p-5 bg-void-light border border-zinc-800 rounded-xl transition-all duration-300 hover:bg-void-lighter hover:border-brand-red/30 hover:shadow-lg hover:-translate-y-1">
											<!-- Date Block -->
											<div class="flex-shrink-0 flex flex-col items-center justify-center w-16 h-16 bg-brand-red text-white rounded-lg">
												<span class="text-[10px] uppercase tracking-wider font-medium opacity-90">{month}</span>
												<span class="font-display text-2xl font-semibold leading-none">{day}</span>
											</div>
											<!-- Content -->
											<div class="flex-grow flex flex-col justify-center">
												<p class="text-sand-muted text-sm mb-1">{date}</p>
												<h3 class="font-display text-xl text-sand group-hover:text-brand-red transition-colors duration-200 mb-2">{classItem.data.title}</h3>
												<p class="text-sand-muted text-sm line-clamp-2">{classItem.data.description}</p>
											</div>
											<!-- Arrow -->
											<div class="flex-shrink-0 flex items-center">
												<div class="w-10 h-10 flex items-center justify-center rounded-full border border-zinc-700 group-hover:border-brand-red/50 group-hover:bg-brand-red/10 transition-all duration-300">
													<svg class="w-5 h-5 text-sand-muted group-hover:text-brand-red transition-colors duration-300 transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
													</svg>
												</div>
											</div>
										</div>
									</a>
								);
							})}

							{upcomingClasses.length === 0 && (
								<div class="text-center py-16 bg-void-light/30 rounded-xl border border-zinc-800/30">
									<p class="text-sand-muted">No upcoming events scheduled. Check back soon!</p>
								</div>
							)}
						</div>

						<!-- View All Link -->
						<div class="mt-10">
							<a href="/classes" class="inline-flex items-center gap-2 font-display text-brand-red hover:text-brand-red-light transition-colors group">
								<span>View all classes</span>
								<svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
								</svg>
							</a>
						</div>
					</div>

					<!-- Sidebar -->
					<div class="lg:col-span-4 space-y-6">
						<!-- Gift Certificates Card -->
						<div class="p-6 bg-void-light border border-zinc-800 rounded-2xl relative overflow-hidden">
							<div class="absolute top-0 right-0 w-32 h-32 bg-brand-red/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
							<p class="text-brand-red text-xs uppercase tracking-[0.2em] mb-2">Gift Ideas</p>
							<h3 class="font-display text-3xl text-sand mb-3">Gift Certificates</h3>
							<p class="text-sand-muted text-sm mb-6 leading-relaxed">Give the gift of transformation. Perfect for birthdays, anniversaries, or any special occasion.</p>
							<a 
								href="/get-a-quote" 
								class="inline-flex items-center gap-2 font-display font-medium text-brand-red hover:text-brand-red-light transition-colors group"
							>
								<span>Purchase</span>
								<svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
								</svg>
							</a>
						</div>

						<!-- Stats Card -->
						<div class="p-6 bg-void-light/50 border border-zinc-800 rounded-2xl text-center">
							<p class="text-sand-muted text-sm uppercase tracking-widest mb-4">Our Impact</p>
							<div class="font-display text-6xl text-sand mb-2">2000<span class="text-brand-red">+</span></div>
							<p class="text-sand-dim text-sm mb-6">bodies painted since 2011</p>
							<a 
								href="/gallery" 
								class="inline-flex items-center gap-2 text-sm font-display text-brand-red hover:text-brand-red-light transition-colors group"
							>
								<span>View our work</span>
								<svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
								</svg>
							</a>
						</div>

						<!-- Social Impact Card -->
						<div class="p-6 bg-void-light/30 border border-zinc-800/50 rounded-2xl">
							<div class="flex items-start gap-3 mb-3">
								<svg class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
								</svg>
								<h4 class="font-display text-lg text-sand">Fighting Human Trafficking</h4>
							</div>
							<p class="text-sand-muted text-sm leading-relaxed">
								We donate a portion of every session to <a href="http://www.ijm.org/" target="_blank" rel="noopener" class="text-brand-red hover:text-brand-red-light transition-colors border-b border-brand-red/30">International Justice Mission</a>.
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Media Feature Section - Dark Theme -->
		<section class="py-24 md:py-32 px-6 bg-void-light border-y border-zinc-800/50">
			<div class="max-w-6xl mx-auto">
				<div class="grid md:grid-cols-2 gap-12 md:gap-20 items-center">
					<!-- Content -->
					<div>
						<!-- Media Logos -->
						<div class="flex flex-wrap gap-6 mb-8 opacity-60">
							<img src="/images/media/today-show.jpg" alt="TODAY Show" class="h-8 md:h-10 w-auto invert brightness-0 filter" />
							<img src="/images/media/1st-look.jpg" alt="1st Look" class="h-8 md:h-10 w-auto invert brightness-0 filter" />
							<img src="/images/media/carson-daly.jpg" alt="Carson Daly" class="h-8 md:h-10 w-auto invert brightness-0 filter" />
							<img src="/images/media/cbs2.jpg" alt="CBS" class="h-8 md:h-10 w-auto invert brightness-0 filter" />
						</div>
						<h2 class="font-display text-4xl md:text-5xl text-sand mb-6">
							On National TV
						</h2>
						<p class="text-sand-muted text-lg leading-relaxed mb-8">
							See DenArt featured on national television. Our work has been showcased on NBC's TODAY Show, demonstrating the transformative power of body painting to millions.
						</p>
						<div class="flex flex-wrap gap-4">
							<a href="/in_media/today-show" class="inline-flex items-center gap-2 font-display font-medium text-brand-red hover:text-brand-red-light transition-colors group">
								<span>Watch the segment</span>
								<svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
								</svg>
							</a>
						</div>
					</div>

					<!-- Video -->
					<div>
						<div class="relative rounded-2xl overflow-hidden shadow-2xl shadow-black/50 border border-zinc-800 group">
							<div class="aspect-video bg-void-lighter">
								<iframe class="w-full h-full" src="https://player.vimeo.com/video/50959638?title=0&byline=0&portrait=0" title="DenArt on TODAY show" allowfullscreen></iframe>
							</div>
							<!-- Play button overlay (shown when video not loaded) -->
							<div class="absolute inset-0 flex items-center justify-center bg-void/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
								<div class="w-16 h-16 rounded-full bg-brand-red/90 flex items-center justify-center">
									<svg class="w-6 h-6 text-void ml-1" fill="currentColor" viewBox="0 0 20 20">
										<path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"></path>
									</svg>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Testimonial Section - Dark Theme -->
		<section class="py-24 md:py-32 px-6 bg-void">
			<div class="max-w-4xl mx-auto text-center">
				<!-- Quote Icon -->
				<svg class="w-12 h-12 text-brand-red/30 mx-auto mb-8" fill="currentColor" viewBox="0 0 24 24">
					<path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"></path>
				</svg>

				<!-- Quote -->
				<blockquote class="font-display text-2xl md:text-3xl lg:text-4xl text-sand leading-relaxed mb-8 italic">
					"REALLY cool experience… I would recommend to anyone who is looking to just live and experience interesting things in life… I was very comfortable, nothing to be nervous or self conscious about… stop hesitating and just go and do it, you won't be disappointed."
				</blockquote>

				<!-- Attribution -->
				<div class="flex items-center justify-center gap-3">
					<div class="w-10 h-10 rounded-full bg-gradient-to-br from-brand-red/30 to-brand-red/10 flex items-center justify-center">
						<span class="font-display text-lg text-brand-red">J</span>
					</div>
					<div class="text-left">
						<p class="font-display text-sand font-medium">Jennifer</p>
						<p class="text-sand-dim text-sm">Google Reviews</p>
					</div>
				</div>

				<!-- CTA -->
				<div class="mt-10">
					<a href="/testimonials" class="inline-flex items-center gap-2 font-display text-brand-red hover:text-brand-red-light transition-colors group">
						<span>Read more reviews</span>
						<svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
						</svg>
					</a>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>

<style>
	@keyframes heroScale {
		0% { transform: scale(1); }
		100% { transform: scale(1.05); }
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in-up {
		animation: fadeInUp 0.8s ease-out forwards;
	}

	.animate-fade-in {
		animation: fadeIn 1s ease-out forwards;
	}

	@keyframes fadeIn {
		from { opacity: 0; }
		to { opacity: 1; }
	}
</style>
