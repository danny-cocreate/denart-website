---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/PageHero.astro';
import CTAButton from '../../components/CTAButton.astro';

// This is a template for creating new media article pages
// Copy this file to create new articles: src/pages/in_media/[slug]/index.astro

interface Props {
  title: string;
  outlet: string;
  type: string;
  videoUrl?: string;
  articleUrl?: string;
  description: string;
}

// Example usage - replace these values when creating a new page
const { 
  title = "Media Article Title",
  outlet = "Outlet Name", 
  type = "TV, United States",
  videoUrl,
  articleUrl,
  description = "Article description"
} = Astro.props;
---

<BaseLayout title={`${title} | DenArt Media`} description={description}>
  <PageHero
    badge="Media Appearance"
    title={title}
    subtitle={`${outlet} | ${type}`}
    minHeight="min-h-[40vh]"
    animate={false}
  />

  <main class="max-w-4xl mx-auto py-12 px-6 bg-void">
    <a href="/in_media/" class="inline-flex items-center text-brand-gold hover:text-brand-gold-light mb-8 transition-colors">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Media
    </a>

    <article class="prose prose-lg prose-invert max-w-none
      prose-headings:font-display
      prose-h2:text-2xl prose-h2:text-sand
      prose-p:text-sand-muted prose-p:leading-relaxed
      prose-a:text-brand-gold hover:prose-a:text-brand-gold-light">
      
      {videoUrl && (
        <div class="aspect-video mb-8 rounded-2xl overflow-hidden border border-zinc-800 shadow-2xl">
          <iframe 
            src={videoUrl}
            class="w-full h-full"
            frameborder="0" 
            allow="autoplay; fullscreen; picture-in-picture" 
            allowfullscreen
          ></iframe>
        </div>
      )}

      <!-- Article content goes here -->
      <slot />
      
      <p class="text-sand-muted">
        Replace this content with the article content. The template includes proper
        styling with the dark void aesthetic, typography, and spacing.
      </p>
    </article>

    <div class="mt-16 p-8 md:p-12 bg-void-light rounded-2xl text-center border border-zinc-800">
      <h3 class="font-display text-2xl text-sand mb-4">Interested in working with us?</h3>
      <p class="text-sand-muted mb-8 max-w-lg mx-auto">
        Contact us for media inquiries, press kits, and collaboration opportunities.
      </p>
      <CTAButton href="/contact" variant="primary">
        Contact Us
      </CTAButton>
    </div>
  </main>
</BaseLayout>

