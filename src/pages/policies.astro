---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Policies | DenArt" description="DenArt booking and cancellation policies">
	<main class="max-w-4xl mx-auto py-16 px-6">
		<h1 class="text-4xl font-bold mb-8" style="color: var(--color-text-primary);">Our Policies</h1>
		<div class="space-y-6">
			<section class="p-6 rounded-xl border" style="background: var(--color-bg-surface); border-color: var(--color-border);">
				<h2 class="text-xl font-semibold mb-3" style="color: var(--color-text-primary);">Booking Policy</h2>
				<p style="color: var(--color-text-secondary);">Please book at least 2 weeks in advance for events.</p>
			</section>
			<section class="p-6 rounded-xl border" style="background: var(--color-bg-surface); border-color: var(--color-border);">
				<h2 class="text-xl font-semibold mb-3" style="color: var(--color-text-primary);">Cancellation Policy</h2>
				<p style="color: var(--color-text-secondary);">Cancellations must be made 48 hours in advance.</p>
			</section>
		</div>
	</main>
</PageLayout>
