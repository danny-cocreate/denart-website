---
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout title="Policies | DenArt" description="DenArt booking and cancellation policies">
	<div class="max-w-4xl mx-auto py-12 px-6">
		<h1 class="text-4xl font-bold text-gray-800 mb-8">Our Policies</h1>
		<div class="space-y-6">
			<section class="bg-white p-6 rounded-lg shadow-sm">
				<h2 class="text-xl font-semibold text-gray-800 mb-2">Booking Policy</h2>
				<p class="text-gray-600">Please book at least 2 weeks in advance for events.</p>
			</section>
			<section class="bg-white p-6 rounded-lg shadow-sm">
				<h2 class="text-xl font-semibold text-gray-800 mb-2">Cancellation Policy</h2>
				<p class="text-gray-600">Cancellations must be made 48 hours in advance.</p>
			</section>
		</div>
	</div>
</PageLayout>
