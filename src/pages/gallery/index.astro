---
import { getCollection } from 'astro:content';
import GalleryLayout from '../../layouts/GalleryLayout.astro';
import GalleryGrid from '../../components/GalleryGrid.astro';

const galleryItems = await getCollection('gallery');

const items = galleryItems.map((item) => ({
	src: item.data.image,
	alt: item.data.title,
	slug: item.slug,
}));
---

<GalleryLayout title="Gallery | DenArt" description="View our face painting and event gallery">
	<div class="max-w-7xl mx-auto py-12 px-6">
		<h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">Our Gallery</h1>
		<GalleryGrid items={items} />
	</div>
</GalleryLayout>
