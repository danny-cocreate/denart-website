---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = 'DenArt Body Painting Studio - NYC Body Art, Classes & Events' } = Astro.props;

const navLinks = [
	{ 
		href: '/services/fine-art-body-painting', 
		label: 'Services',
		hasDropdown: true,
		dropdownItems: [
			{ href: '/services/fine-art-body-painting', label: 'Fine Art Body Painting' },
			{ href: '/services/body-painting-for-events', label: 'Body Painting for Events/Commercial Projects' },
			{ href: '/services/hypnotic-body-painting', label: 'Hypnotic Body Painting' },
		]
	},
	{ 
		href: '/classes/uv-body-paint-couples', 
		label: 'Classes & Events',
		hasDropdown: true,
		dropdownItems: [
			{ href: '/classes/uv-body-paint-couples', label: 'Paint in the Dark UV Class' },
			{ href: '/classes/speed-friending', label: 'Speed Friending x Body Paint' },
			{ href: '/classes/private-party', label: 'Private Party at Studio' },
		]
	},
	{ href: '/gallery', label: 'Gallery' },
	{ href: '/in_media/', label: 'In Media' },
	{ href: '/reviews', label: 'Reviews' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content={description}>
	<meta name="keywords" content="body painting, NYC, Brooklyn, body art, fine art, maternity painting, UV painting, classes, events">
	<meta property="og:title" content={title}>
	<meta property="og:description" content={description}>
	<meta property="og:type" content="website">
	<link rel="canonical" href={Astro.url.href}>
	<title>{title}</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,500;1,600&family=Karla:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "LocalBusiness",
		"name": "DenArt Body Painting Studio",
		"image": "https://denartny.com/images/logo.png",
		"url": "https://denartny.com",
		"telephone": "+1-646-926-1202",
		"address": {
			"@type": "PostalAddress",
			"streetAddress": "99 Kingsland Ave #102",
			"addressLocality": "Brooklyn",
			"addressRegion": "NY",
			"postalCode": "11222",
			"addressCountry": "US"
		},
		"geo": {
			"@type": "GeoCoordinates",
			"latitude": 40.7282,
			"longitude": -73.9442
		},
		"aggregateRating": {
			"@type": "AggregateRating",
			"ratingValue": "5",
			"reviewCount": "42"
		},
		"priceRange": "$$",
		"openingHoursSpecification": {
			"@type": "OpeningHoursSpecification",
			"dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
			"opens": "10:00",
			"closes": "20:00"
		},
		"sameAs": [
			"https://www.yelp.com/biz/denart-body-painting-studio-long-island-city",
			"https://www.instagram.com/denartny"
		]
	}
	</script>
</head>
<body class="min-h-screen bg-void font-body">
	<header class="sticky top-0 z-50 backdrop-blur-lg border-b border-zinc-800/60" style="background-color: rgba(10, 10, 14, 0.92);">
		<nav class="max-w-7xl mx-auto px-6 py-4" aria-label="Main navigation">
			<div class="flex items-center justify-between">
				<!-- Logo -->
				<a href="/" class="block relative group" aria-label="DenArt Home">
					<img src="/images/logo-white.png" alt="DenArt" class="h-10 md:h-12 transition-transform duration-300 group-hover:scale-105" />
				</a>

				<!-- Desktop Navigation -->
				<ul class="hidden lg:flex items-center gap-8">
					{navLinks.map(link => (
						<li class={link.hasDropdown ? 'relative group' : ''}>
							{link.hasDropdown ? (
								<button 
									class="flex items-center gap-1.5 font-display text-sand hover:text-brand-red transition-colors duration-200 py-2"
									onclick="const menu = this.nextElementSibling; const arrow = this.querySelector('svg'); menu.classList.toggle('hidden'); arrow.classList.toggle('rotate-180');"
									aria-expanded="false"
									aria-haspopup="true"
								>
									{link.label}
									<svg 
										class="w-4 h-4 transition-transform duration-200" 
										fill="none" 
										stroke="currentColor" 
										viewBox="0 0 24 24"
									>
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
									</svg>
								</button>
								<ul class="hidden absolute top-full left-1/2 -translate-x-1/2 mt-3 w-72 bg-zinc-900/95 border border-zinc-800 rounded-xl shadow-2xl shadow-black/50 py-3 z-50 dropdown-menu animate-none">
									<li class="px-4 py-2 text-xs uppercase tracking-widest text-sand/50">{link.label}</li>
									{link.dropdownItems.map(item => (
										<li>
											<a 
												href={item.href}
												style="color: white;"
												class="block px-4 py-2.5 text-sm hover:!text-brand-red hover:bg-white/5 transition-colors duration-150"
											>
												{item.label}
											</a>
										</li>
									))}
								</ul>
							) : (
								<a 
									href={link.href} 
									class="font-display text-sand hover:text-brand-red transition-colors duration-200 py-2 relative group"
								>
									{link.label}
									<span class="absolute bottom-0 left-0 w-0 h-px bg-brand-red transition-all duration-300 group-hover:w-full"></span>
								</a>
							)}
						</li>
					))}
				</ul>

				<!-- CTA Button (Desktop) -->
				<a 
					href="/get-a-quote" 
					class="hidden lg:inline-flex items-center font-semibold uppercase tracking-wider px-4 py-1.5 rounded-lg transition-all duration-200 hover:scale-105 hover:shadow-lg hover:shadow-brand-red/30 text-xs"
					style="background-color: var(--color-brand-red); color: #fff;"
				>
					Get a Quote
				</a>

				<!-- Mobile Menu Button -->
				<button 
					id="mobile-menu-btn"
					class="lg:hidden flex flex-col justify-center items-center w-10 h-10 space-y-1.5 group"
					aria-label="Toggle menu"
					aria-expanded="false"
				>
					<span class="block w-6 h-0.5 bg-sand transition-all duration-300 origin-center group-[.active]:rotate-45 group-[.active]:translate-y-2"></span>
					<span class="block w-6 h-0.5 bg-sand transition-all duration-300 group-[.active]:opacity-0"></span>
					<span class="block w-6 h-0.5 bg-sand transition-all duration-300 origin-center group-[.active]:-rotate-45 group-[.active]:-translate-y-2"></span>
				</button>
			</div>
		</nav>

		<!-- Mobile Menu Overlay -->
		<div id="mobile-menu" class="lg:hidden fixed inset-0 top-[calc(4rem+1px)] bg-void/98 backdrop-blur-xl z-40 opacity-0 pointer-events-none transition-opacity duration-300">
			<div class="max-w-7xl mx-auto px-6 py-8 flex flex-col h-[calc(100vh-5rem)] overflow-y-auto">
				<nav class="flex flex-col space-y-1" aria-label="Mobile navigation">
					{navLinks.map(link => (
						<div class="border-b border-zinc-800/50">
							{link.hasDropdown ? (
								<>
									<button 
										class="flex items-center justify-between w-full py-4 text-xl font-display text-sand"
										onclick="const submenu = this.nextElementSibling; submenu.classList.toggle('hidden'); this.querySelector('svg').classList.toggle('rotate-180');"
									>
										{link.label}
										<svg class="w-5 h-5 text-sand/50 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
										</svg>
									</button>
									<ul class="hidden pb-2 pl-4 space-y-1">
										{link.dropdownItems.map(item => (
											<li>
												<a 
													href={item.href}
													style="color: white;"
													class="block py-2 hover:!text-brand-red transition-colors"
												>
													{item.label}
												</a>
											</li>
										))}
									</ul>
								</>
							) : (
								<a 
									href={link.href}
									class="block py-4 text-xl font-display text-sand hover:text-brand-red transition-colors"
								>
									{link.label}
								</a>
							)}
						</div>
					))}
				</nav>

				<div class="mt-10 pt-8 border-t border-zinc-800/50">
					<a 
						href="/get-a-quote" 
						class="block w-full text-center font-semibold uppercase tracking-wider py-4 rounded-lg text-white bg-brand-red hover:opacity-90 transition-all duration-200 hover:shadow-lg hover:shadow-brand-red/30"
					>
						Get a Quote
					</a>
					<div class="mt-8 text-center">
						<p class="text-sm text-sand/50">CoCreate Space</p>
						<p class="text-sm text-sand/50">99 Kingsland Ave #102, Brooklyn</p>
						<a href="tel:646-926-1202" class="mt-3 inline-block text-brand-red hover:text-brand-red-light transition-colors">646-926-1202</a>
					</div>
				</div>
			</div>
		</div>
	</header>

	<slot />

	<script>
		// Close dropdowns when clicking outside
		document.addEventListener('click', function(e) {
			const target = e.target as HTMLElement;
			const dropdowns = document.querySelectorAll('.dropdown-menu');
			dropdowns.forEach(dropdown => {
				const trigger = dropdown.previousElementSibling;
				if (!dropdown.contains(target) && trigger && !trigger.contains(target)) {
					dropdown.classList.add('hidden');
					if (trigger.getAttribute('aria-expanded') === 'true') {
						trigger.setAttribute('aria-expanded', 'false');
					}
				}
			});
		});

		// Mobile menu toggle
		const mobileMenuBtn = document.getElementById('mobile-menu-btn');
		const mobileMenu = document.getElementById('mobile-menu');
		
		mobileMenuBtn?.addEventListener('click', function() {
			const isExpanded = this.getAttribute('aria-expanded') === 'true';
			this.setAttribute('aria-expanded', String(!isExpanded));
			this.classList.toggle('active');
			
			if (mobileMenu) {
				if (isExpanded) {
					mobileMenu.classList.add('opacity-0', 'pointer-events-none');
					mobileMenu.classList.remove('opacity-100', 'pointer-events-auto');
					document.body.style.overflow = '';
				} else {
					mobileMenu.classList.remove('opacity-0', 'pointer-events-none');
					mobileMenu.classList.add('opacity-100', 'pointer-events-auto');
					document.body.style.overflow = 'hidden';
				}
			}
		});

		// Close mobile menu on resize to desktop
		window.addEventListener('resize', () => {
			if (window.innerWidth >= 1024) {
				mobileMenuBtn?.classList.remove('active');
				mobileMenuBtn?.setAttribute('aria-expanded', 'false');
				mobileMenu?.classList.add('opacity-0', 'pointer-events-none');
				mobileMenu?.classList.remove('opacity-100', 'pointer-events-auto');
				document.body.style.overflow = '';
			}
		});
	</script>
	<footer class="border-t border-zinc-800 bg-void mt-20">
		<div class="max-w-7xl mx-auto px-6 py-16">
			<div class="grid md:grid-cols-4 gap-10">
				<section class="md:col-span-1">
					<h3 class="text-lg font-display font-semibold mb-5 text-sand tracking-wide">DenArt Studio</h3>
					<address class="not-italic leading-relaxed">
						<p class="text-sand/60">CoCreate Space</p>
						<p class="text-sand/60">99 Kingsland Ave #102</p>
						<p class="text-sand/60">Brooklyn, NY 11222</p>
						<p class="mt-3 flex items-center gap-2">
							<svg class="w-4 h-4 text-brand-red" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/></svg>
							<a href="tel:646-926-1202" class="text-brand-red hover:text-brand-red-light transition-colors">646-926-1202</a>
						</p>
					</address>
				</section>
				<nav aria-label="Services">
					<h3 class="text-lg font-display font-semibold mb-5 text-sand tracking-wide">Services</h3>
					<ul class="space-y-3">
						<li><a href="/services/fine-art-body-painting" class="text-sand/60 hover:text-brand-red transition-colors duration-200">Fine Art Body Painting</a></li>
						<li><a href="/services/body-painting-for-events" class="text-sand/60 hover:text-brand-red transition-colors duration-200">Body Painting for Events/Commercial Projects</a></li>
						<li><a href="/services/hypnotic-body-painting" class="text-sand/60 hover:text-brand-red transition-colors duration-200">Hypnotic Body Painting</a></li>
					</ul>
				</nav>
				<nav aria-label="Classes & Info">
					<h3 class="text-lg font-display font-semibold mb-5 text-sand tracking-wide">Classes & Info</h3>
					<ul class="space-y-3">
						<li><a href="/about" class="text-sand/60 hover:text-brand-red transition-colors duration-200">About</a></li>
						<li><a href="/reviews" class="text-sand/60 hover:text-brand-red transition-colors duration-200">Reviews</a></li>
						<li><a href="/in_media" class="text-sand/60 hover:text-brand-red transition-colors duration-200">In Media</a></li>
						<li><a href="/contact" class="text-sand/60 hover:text-brand-red transition-colors duration-200">Contact</a></li>
						<li><a href="/body-painting-models" class="text-sand/60 hover:text-brand-red transition-colors duration-200">Models</a></li>
					</ul>
				</nav>
				<section>
					<h3 class="text-lg font-display font-semibold mb-5 text-sand tracking-wide">Reviews</h3>
					<ul class="space-y-3">
						<li><a href="https://bit.ly/denart-google" class="text-sand/60 hover:text-brand-red transition-colors flex items-center gap-2" target="_blank" rel="noopener"><svg class="w-4 h-4 text-brand-red" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>Google: 5/5 (20+ reviews)</a></li>
						<li><a href="http://www.yelp.com/biz/denart-body-painting-studio-long-island-city" class="text-sand/60 hover:text-brand-red transition-colors flex items-center gap-2" target="_blank" rel="noopener"><svg class="w-4 h-4 text-brand-red" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>Yelp: 5/5 (22 reviews)</a></li>
					</ul>
					<div class="mt-6 pt-6 border-t border-zinc-800">
						<p class="text-4xl font-display font-semibold text-sand">2000+</p>
						<p class="text-sm text-sand/50 mt-1">bodies painted since 2011</p>
						<a href="/gallery" class="inline-flex items-center gap-2 mt-3 text-brand-red hover:text-brand-red-light transition-colors text-sm">View our work<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg></a>
					</div>
				</section>
			</div>
			<div class="border-t border-zinc-800 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-sand/40">
				<p>&copy; <time datetime="2026">2026</time> DenArt Body Painting Studio. All rights reserved.</p>
				<p class="text-center md:text-right">We donate a portion to <a href="http://www.ijm.org/" class="text-brand-red/60 hover:text-brand-red transition-colors" target="_blank" rel="noopener">International Justice Mission</a> â€” fighting human trafficking.</p>
			</div>
		</div>
	</footer>
</body>
</html>

