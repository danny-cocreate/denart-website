---
interface Props {
  text: string;
  variant?: 'default' | 'outlined' | 'subtle';
  class?: string;
}

const { 
  text, 
  variant = 'default',
  class: className = '' 
} = Astro.props;

const baseClasses = 'inline-block px-4 py-2 rounded-full text-sm font-medium';

const variantClasses = {
  default: 'bg-brand-red/20 text-brand-gold border border-brand-red/30',
  outlined: 'bg-transparent text-brand-gold border border-brand-gold/50',
  subtle: 'bg-brand-red/10 text-brand-gold/80'
}[variant];
---

<span class={`${baseClasses} ${variantClasses} ${className}`}>
  {text}
</span>
