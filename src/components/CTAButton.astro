---
export interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  showArrow?: boolean;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  showArrow = false,
} = Astro.props;

// Size configurations
const sizeClasses = {
  sm: 'px-6 py-3 text-sm',
  md: 'px-8 py-4 text-base',
  lg: 'px-8 py-4 text-base',
};

// Variant configurations as specified
const variantClasses = {
  primary: `group relative inline-flex items-center gap-2 font-semibold uppercase tracking-wider rounded-lg overflow-hidden transition-all duration-300 bg-brand-red text-white hover:shadow-lg hover:shadow-brand-red/30 hover:-translate-y-0.5 ${sizeClasses[size]}`,
  secondary: `group inline-flex items-center gap-2 font-semibold uppercase tracking-wider rounded-lg backdrop-blur-sm transition-all duration-300 border border-sand/30 text-sand bg-white/5 hover:bg-white/10 hover:border-brand-red/50 ${sizeClasses[size]}`,
};

const classes = `${variantClasses[variant]} ${className}`;
---

<a href={href} class={classes}>
  <span class={variant === 'primary' ? 'text-white' : ''} style={variant === 'primary' ? 'color: white;' : ''}><slot /></span>
  {showArrow && variant === 'primary' && (
    <svg class="w-4 h-4 relative z-10 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
    </svg>
  )}
</a>
