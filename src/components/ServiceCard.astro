---
interface Props {
	title: string;
	description: string;
	image?: string;
	slug: string;
}

const { title, description, image, slug } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
	{image && (
		<img src={image} alt={title} class="w-full h-48 object-cover" />
	)}
	<div class="p-6">
		<h3 class="text-xl font-semibold text-gray-800 mb-2">{title}</h3>
		<p class="text-gray-600 mb-4">{description}</p>
		<a href={`/services/${slug}`} class="inline-block text-brand-purple hover:text-brand-gold font-medium relative group/link transition-transform group-hover/link:translate-x-1">
			Learn more
			<span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-gold transition-all group-hover/link:w-full"></span>
		</a>
	</div>
</article>
