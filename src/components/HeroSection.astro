---
interface Props {
	title: string;
	subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="w-full py-20 px-6 bg-gradient-to-br from-purple-50 to-pink-50">
	<div class="max-w-7xl mx-auto text-center">
		<h1 class="text-4xl md:text-6xl font-bold text-gray-800 mb-4">{title}</h1>
		{subtitle && <p class="text-xl text-gray-600 max-w-2xl mx-auto">{subtitle}</p>}
	</div>
</section>
