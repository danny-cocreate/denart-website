---
interface Testimonial {
	quote: string;
	author: string;
	role?: string;
}

interface Props {
	testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section class="w-full py-16 px-6 bg-gray-50">
	<div class="max-w-7xl mx-auto">
		<h2 class="text-3xl font-bold text-center text-gray-800 mb-12">What Our Clients Say</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{testimonials.map((t) => (
				<blockquote class="bg-white p-6 rounded-lg shadow-sm">
					<p class="text-gray-600 italic mb-4">"{t.quote}"</p>
					<footer>
						<cite class="not-italic font-semibold text-gray-800">â€” {t.author}</cite>
						{t.role && <span class="text-gray-500 text-sm ml-2">{t.role}</span>}
					</footer>
				</blockquote>
			))}
		</div>
	</div>
</section>
